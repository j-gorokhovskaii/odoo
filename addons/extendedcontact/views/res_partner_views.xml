<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the main partner form view to add all extended fields -->
        <record id="view_partner_form_inherit_extended" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Add basic extended fields after the function field for individual contacts -->
                <xpath expr="//field[@name='function']" position="after">
                    <!-- Basic Information Section - Keep only essential fields in main form -->
                    <group string="Basic Information" invisible="is_company" col="2">
                        <field name="birthdate" 
                               widget="date"
                               options="{'format': 'dd/mm/yyyy'}"
                               placeholder="e.g. 15/03/1990"/>
                        <field name="age" 
                               readonly="1"/>
                        <field name="gender"/>
                        <field name="marital_status"/>
                        <field name="phone" 
                               widget="phone"
                               options="{'enable_sms': false}"/>
                        <field name="mobile" 
                               widget="phone"
                               options="{'enable_sms': false}"/>
                    </group>
                </xpath>
                
                <!-- Update standard fields with proper placeholders and sizing -->
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="placeholder">e.g. Sales Director</attribute>
                </xpath>
                
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="widget">email</attribute>
                    <attribute name="context">{'gravatar_image': True}</attribute>
                </xpath>
                
                <xpath expr="//field[@name='website']" position="attributes">
                    <attribute name="widget">url</attribute>
                    <attribute name="placeholder">e.g. https://www.odoo.com</attribute>
                </xpath>
                
                <xpath expr="//field[@name='title']" position="attributes">
                    <attribute name="options">{'no_open': True}</attribute>
                    <attribute name="placeholder">e.g. Mister</attribute>
                </xpath>
                
                <xpath expr="//field[@name='category_id']" position="attributes">
                    <attribute name="widget">many2many_tags</attribute>
                    <attribute name="options">{'color_field': 'color'}</attribute>
                    <attribute name="placeholder">e.g. "B2B", "VIP", "Consulting", ...</attribute>
                </xpath>
            </field>
        </record>

        <!-- Extend the simplified partner form view -->
        <record id="view_partner_simple_form_inherit_extended" model="ir.ui.view">
            <field name="name">res.partner.simple.form.inherit.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field name="arch" type="xml">
                <!-- Add basic extended fields after the function field -->
                <xpath expr="//field[@name='function']" position="after">
                    <!-- Basic Information Section - Keep only essential fields in simple form -->
                    <group string="Basic Information" invisible="is_company" col="2">
                        <field name="birthdate" 
                               widget="date"
                               options="{'format': 'dd/mm/yyyy'}"
                               placeholder="e.g. 15/03/1990"/>
                        <field name="age" 
                               readonly="1"/>
                        <field name="gender"/>
                        <field name="marital_status"/>
                        <field name="phone" 
                               widget="phone"
                               options="{'enable_sms': false}"/>
                        <field name="mobile" 
                               widget="phone"
                               options="{'enable_sms': false}"/>
                    </group>
                </xpath>
                
                <!-- Update standard fields with proper placeholders and sizing -->
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="placeholder">e.g. Sales Director</attribute>
                </xpath>
                
                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="widget">email</attribute>
                    <attribute name="context">{'gravatar_image': True}</attribute>
                </xpath>
            </field>
        </record>

        <!-- Extend the partner tree view to optionally show extended fields -->
        <record id="view_partner_tree_inherit_extended" model="ir.ui.view">
            <field name="name">res.partner.tree.inherit.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <!-- Add extended fields as optional columns -->
                <xpath expr="//field[@name='email']" position="after">
                    <field name="age" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="gender" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="height" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="weight" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="eye_color" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="hair_color" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="race" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="occupation" 
                           optional="hide" 
                           invisible="is_company"/>
                    <field name="citizenship_status" 
                           optional="hide" 
                           invisible="is_company"/>
                </xpath>
            </field>
        </record>

        <!-- Extend the partner search view to add extended field filters -->
        <record id="view_res_partner_filter_inherit_extended" model="ir.ui.view">
            <field name="name">res.partner.filter.inherit.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <!-- Add extended fields to search -->
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="birthdate" 
                           filter_domain="[('birthdate', 'ilike', self)]"/>
                    <field name="gender" 
                           filter_domain="[('gender', 'ilike', self)]"/>
                    <field name="height" 
                           filter_domain="[('height', 'ilike', self)]"/>
                    <field name="weight" 
                           filter_domain="[('weight', 'ilike', self)]"/>
                    <field name="eye_color" 
                           filter_domain="[('eye_color', 'ilike', self)]"/>
                    <field name="hair_color" 
                           filter_domain="[('hair_color', 'ilike', self)]"/>
                    <field name="race" 
                           filter_domain="[('race', 'ilike', self)]"/>
                    <field name="ethnicity" 
                           filter_domain="[('ethnicity', 'ilike', self)]"/>
                    <field name="occupation" 
                           filter_domain="[('occupation', 'ilike', self)]"/>
                    <field name="citizenship_status" 
                           filter_domain="[('citizenship_status', 'ilike', self)]"/>
                    <field name="distinguishing_features" 
                           filter_domain="[('distinguishing_features', 'ilike', self)]"/>
                </xpath>
                
                <!-- Add birthdate-based filters -->
                <xpath expr="//filter[@name='inactive']" position="after">
                    <separator/>
                    <filter string="Has Birth Date" 
                            name="has_birthdate" 
                            domain="[('birthdate', '!=', False)]"/>
                    <filter string="No Birth Date" 
                            name="no_birthdate" 
                            domain="[('birthdate', '=', False)]"/>
                </xpath>
                
                <!-- Add height-based filters -->
                <xpath expr="//filter[@name='no_birthdate']" position="after">
                    <separator/>
                    <filter string="Has Height" 
                            name="has_height" 
                            domain="[('height', '!=', False)]"/>
                    <filter string="No Height" 
                            name="no_height" 
                            domain="[('height', '=', False)]"/>
                    <filter string="Height 150cm+" 
                            name="height_150_plus" 
                            domain="[('height', '>=', 150)]"/>
                    <filter string="Height 180cm+" 
                            name="height_180_plus" 
                            domain="[('height', '>=', 180)]"/>
                </xpath>

                <!-- Add weight-based filters -->
                <xpath expr="//filter[@name='height_180_plus']" position="after">
                    <separator/>
                    <filter string="Has Weight" 
                            name="has_weight" 
                            domain="[('weight', '!=', False)]"/>
                    <filter string="No Weight" 
                            name="no_weight" 
                            domain="[('weight', '=', False)]"/>
                    <filter string="Weight 50kg+" 
                            name="weight_50_plus" 
                            domain="[('weight', '>=', 50)]"/>
                    <filter string="Weight 80kg+" 
                            name="weight_80_plus" 
                            domain="[('weight', '>=', 80)]"/>
                </xpath>

                <!-- Add gender filters -->
                <xpath expr="//filter[@name='weight_80_plus']" position="after">
                    <separator/>
                    <filter string="Male" 
                            name="male" 
                            domain="[('gender', '=', 'male')]"/>
                    <filter string="Female" 
                            name="female" 
                            domain="[('gender', '=', 'female')]"/>
                </xpath>

                <!-- Add eye color filters -->
                <xpath expr="//filter[@name='female']" position="after">
                    <separator/>
                    <filter string="Brown Eyes" 
                            name="brown_eyes" 
                            domain="[('eye_color', '=', 'brown')]"/>
                    <filter string="Blue Eyes" 
                            name="blue_eyes" 
                            domain="[('eye_color', '=', 'blue')]"/>
                    <filter string="Green Eyes" 
                            name="green_eyes" 
                            domain="[('eye_color', '=', 'green')]"/>
                </xpath>

                <!-- Add hair color filters -->
                <xpath expr="//filter[@name='green_eyes']" position="after">
                    <separator/>
                    <filter string="Brown Hair" 
                            name="brown_hair" 
                            domain="[('hair_color', '=', 'brown')]"/>
                    <filter string="Black Hair" 
                            name="black_hair" 
                            domain="[('hair_color', '=', 'black')]"/>
                    <filter string="Blonde Hair" 
                            name="blonde_hair" 
                            domain="[('hair_color', '=', 'blonde')]"/>
                    <filter string="Red Hair" 
                            name="red_hair" 
                            domain="[('hair_color', '=', 'red')]"/>
                </xpath>

                <!-- Add race filters -->
                <xpath expr="//filter[@name='red_hair']" position="after">
                    <separator/>
                    <filter string="White" 
                            name="white_race" 
                            domain="[('race', '=', 'white')]"/>
                    <filter string="Black" 
                            name="black_race" 
                            domain="[('race', '=', 'black')]"/>
                    <filter string="Asian" 
                            name="asian_race" 
                            domain="[('race', '=', 'asian')]"/>
                    <filter string="Hispanic" 
                            name="hispanic_ethnicity" 
                            domain="[('ethnicity', '=', 'hispanic')]"/>
                </xpath>

                <!-- Add citizenship filters -->
                <xpath expr="//filter[@name='hispanic_ethnicity']" position="after">
                    <separator/>
                    <filter string="U.S. Citizen" 
                            name="us_citizen" 
                            domain="[('citizenship_status', '=', 'citizen')]"/>
                    <filter string="Permanent Resident" 
                            name="permanent_resident" 
                            domain="[('citizenship_status', '=', 'permanent_resident')]"/>
                    <filter string="Military Service" 
                            name="military_service" 
                            domain="[('military_service', '=', True)]"/>
                </xpath>
            </field>
        </record>

        <!-- Add new tab to the main partner form view -->
        <record id="view_partner_form_inherit_extended_tab" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.extended.tab</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Add new tab after Internal Notes tab -->
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page string="Extended Information" name="extended_information" invisible="is_company">
                        <!-- Basic Information Section -->
                        <group string="Basic Information" col="2">
                            <field name="birthdate" 
                                   widget="date"
                                   options="{'format': 'dd/mm/yyyy'}"
                                   placeholder="e.g. 15/03/1990"/>
                            <field name="age" 
                                   readonly="1"/>
                            <field name="gender"/>
                            <field name="marital_status"/>
                            <field name="phone" 
                                   widget="phone"
                                   options="{'enable_sms': false}"/>
                            <field name="mobile" 
                                   widget="phone"
                                   options="{'enable_sms': false}"/>
                        </group>

                        <!-- Physical Characteristics Section -->
                        <group string="Physical Characteristics" col="2">
                            <field name="height" 
                                   widget="float"
                                   placeholder="e.g. 175.5"/>
                            <field name="weight" 
                                   widget="float"
                                   placeholder="e.g. 70.5"/>
                            <field name="build"/>
                            <field name="complexion"/>
                            <field name="eye_color"/>
                            <field name="hair_color"/>
                            <field name="hair_style"/>
                            <field name="blood_type"/>
                        </group>

                        <!-- Distinguishing Features Section -->
                        <group string="Distinguishing Features" col="1">
                            <field name="distinguishing_features" 
                                   placeholder="e.g. Scar on left cheek, tattoo on right arm"
                                   nolabel="1"/>
                        </group>

                        <!-- Demographics Section -->
                        <group string="Demographics" col="2">
                            <field name="ethnicity"/>
                            <field name="race"/>
                            <field name="primary_language"/>
                            <field name="country_of_birth"/>
                            <field name="citizenship_status"/>
                        </group>

                        <!-- Identification Section -->
                        <group string="Identification" col="2">
                            <field name="ssn" 
                                   placeholder="XXX-XX-XXXX"/>
                            <field name="driver_license_number"/>
                            <field name="driver_license_state"/>
                            <field name="passport_number"/>
                            <field name="passport_country"/>
                        </group>

                        <!-- Employment &amp; Education Section -->
                        <group string="Employment &amp; Education" col="2">
                            <field name="occupation" 
                                   placeholder="e.g. Sales Director"/>
                            <field name="employer"/>
                            <field name="education_level"/>
                        </group>

                        <!-- Military Service Section -->
                        <group string="Military Service" col="2">
                            <field name="military_service"/>
                            <field name="military_branch" 
                                   invisible="not military_service"/>
                        </group>

                        <!-- Medical Information Section -->
                        <group string="Medical Information" col="1">
                            <field name="medical_conditions" 
                                   placeholder="e.g. Diabetes, allergies to penicillin"
                                   nolabel="1"/>
                        </group>

                        <!-- Emergency Contact Section -->
                        <group string="Emergency Contact" col="2">
                            <field name="emergency_contact_name"/>
                            <field name="emergency_contact_phone" 
                                   widget="phone"
                                   options="{'enable_sms': false}"/>
                            <field name="emergency_contact_relationship"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 