<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend the main partner form view to add all extended fields -->
        <record id="view_partner_form_inherit_extended" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.extended</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Add all extended fields after the function field for individual contacts -->
                <xpath expr="//field[@name='function']" position="after">
                    <!-- Basic Information Section -->
                    <group string="Basic Information" invisible="is_company">
                        <field name="birthdate" 
                               widget="date"
                               options="{'format': 'dd/mm/yyyy'}"
                               placeholder="e.g. 15/03/1990"/>
                        <field name="age" 
                               readonly="1"/>
                        <field name="gender"/>
                        <field name="marital_status"/>
                    </group>

                    <!-- Physical Characteristics Section -->
                    <group string="Physical Characteristics" invisible="is_company">
                        <field name="height" 
                               widget="float"
                               placeholder="e.g. 175.5"/>
                        <field name="weight" 
                               widget="float"
                               placeholder="e.g. 70.5"/>
                        <field name="build"/>
                        <field name="complexion"/>
                        <field name="eye_color"/>
                        <field name="hair_color"/>
                        <field name="hair_style"/>
                        <field name="blood_type"/>
                        <field name="distinguishing_features" 
                               placeholder="e.g. Scar on left cheek, tattoo on right arm"/>
                    </group>

                    <!-- Demographics Section -->
                    <group string="Demographics" invisible="is_company">
                        <field name="ethnicity"/>
                        <field name="race"/>
                        <field name="primary_language"/>
                        <field name="country_of_birth"/>
                        <field name="citizenship_status"/>
                    </group>

                    <!-- Identification Section -->
                    <group string="Identification" invisible="is_company">
                        <field name="ssn" 
                               placeholder="XXX-XX-XXXX"/>
                        <field name="driver_license_number"/>
                        <field name="driver_license_state"/>
                        <field name="passport_number"/>
                        <field name="passport_country"/>
                    </group>

                    <!-- Employment & Education Section -->
                    <group string="Employment & Education" invisible="is_company">
                        <field name="occupation"/>
                        <field name="employer"/>
                        <field name="education_level"/>
                    </group>

                    <!-- Military Service Section -->
                    <group string="Military Service" invisible="is_company">
                        <field name="military_service"/>
                        <field name="military_branch" 
                               invisible="not military_service"/>
                    </group>

                    <!-- Medical Information Section -->
                    <group string="Medical Information" invisible="is_company">
                        <field name="medical_conditions" 
                               placeholder="e.g. Diabetes, allergies to penicillin"/>
                    </group>

                    <!-- Emergency Contact Section -->
                    <group string="Emergency Contact" invisible="is_company">
                        <field name="emergency_contact_name"/>
                        <field name="emergency_contact_phone"/>
                        <field name="emergency_contact_relationship"/>
                    </group>
                </xpath>
            </field>
        </record>

